<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:exitFadeDuration="@integer/config_navAnimTime">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#F6FBFF" />
            <corners android:radius="8dp" />
            <stroke android:width="1.5dp" android:color="@color/primary_green" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/white" />
            <corners android:radius="8dp" />
            <stroke android:width="1.25dp" android:color="@color/primary_green" />
        </shape>
    </item>
</selector>